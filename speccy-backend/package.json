{
  "name": "speccy-backend",
  "version": "1.0.0",
  "description": "Backend service for Speccy TTS app",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production npm run migrate && npm start",
    "migrate": "tsx src/database/migrate.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t speccy-backend .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data speccy-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:prod": "docker-compose --profile production up -d"
  },
  "keywords": ["tts", "openai", "fastify", "typescript"],
  "author": "Speccy App",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^8.0.3",
    "better-sqlite3": "^11.5.0",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0 <24.0.0"
  }
}